{
  "env": {
    "node": true,
    "commonjs": true
  },
  "globals": {
    "Promise": true
  },
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaVersion": 2015,
    "requireConfigFile": false
  },
  "extends": ["eslint:recommended", "prettier"],
  "rules": {
    "semi": ["error", "always"],
    "quotes": "off",
    "no-console": "off",
    "no-redeclare": "warn"
  }
}
